<% if current_user %>

<h1>Welcome <%= current_user.first_name %></h1>
<%= link_to "Log Out", session_path("current"), method: "delete" %>

<div>
  You woke up at: <%= Time.at @time %>
</div>
<%= image_tag "https://jawbone.com/#{@sleep_image}" %>

<%= image_tag "https://jawbone.com/#{@image}" %>


<% else %>

  <%= form_tag("https://jawbone.com/auth/oauth2/auth", method: "get") do %>
    <%= hidden_field_tag(:response_type, "code") %>
    <%= hidden_field_tag(:client_id, ENV["JAWBONE_CLIENT_ID"]) %>
    <%= hidden_field_tag(:scope, "basic_read extended_info location_read friends_read mood_read mood_write move_read move_write sleep_read meal_read meal_write weight_read weight_write cardiac_read cardiac_write generic_event_read generic_event_write") %>
    <%= hidden_field_tag(:redirect_uri, "http://localhost:3000/auth") %>
    <%= submit_tag("Log In With Jawbone") %>
  <% end %>

<% end %>


