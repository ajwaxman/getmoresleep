<% if current_user %>

<h1>Welcome <%= current_user.first_name %></h1>
<%= link_to "Log Out", session_path("current"), method: "delete" %>

<div>
  You went to sleep last night at: <%= Time.at(@sleep_time).strftime "%l:%M %p" %>
</div>
<div>
  You woke up this morning at: <%= Time.at(@wake_time).strftime "%l:%M %p" %>
</div>

<div>
  You slept for <%= Time.at(@sleep_length) %>
</div>


<div>
  The whole hash: <%= @sleep %>
</div>

<%= image_tag "https://jawbone.com/#{@sleep_image}" %>

<%= image_tag "https://jawbone.com/#{@image}" %>


<% else %>
  
  <%= render 'shared/homepage' %>


<% end %>


